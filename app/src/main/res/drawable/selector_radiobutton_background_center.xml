<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="-1dp" android:right="-1dp">

        <selector>
            <item android:state_checked="true" >
                <shape>
                    <solid android:color="@color/color_blue"></solid>
                    <stroke android:color="@color/color_blue" android:width="@dimen/default_height_line"></stroke>
                </shape>
            </item>
            <item android:state_checked="false">
                <shape>
                    <solid android:color="@color/color_white"></solid>
                    <stroke android:color="@color/color_blue" android:width="@dimen/default_height_line"></stroke>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>