<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_backgroud_color"
    >

    <include layout="@layout/layout_public_titlebar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/red"
                >

                <LinearLayout
                    android:id="@+id/ll_user_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/default_margin_2"
                    >
                    <ImageView
                        android:id="@+id/iv_header"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/image_header_default"
                        />
                    <TextView
                        android:id="@+id/tv_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击登录"
                        android:textSize="@dimen/default_text_size_3"
                        android:gravity="center"
                        android:textColor="@color/color_white"
                        android:layout_marginTop="@dimen/default_margin_4"

                        />

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/image_my_collect_select"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_collect_text"
                        android:gravity="center"
                        android:textSize="@dimen/default_text_size_4"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/image_browsing_history"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_browsing_history_text"
                        android:gravity="center"
                        android:textSize="@dimen/default_text_size_4"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/image_discuss"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_discuss_text"
                        android:gravity="center"
                        android:textSize="@dimen/default_text_size_4"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/image_message"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_message_text"
                        android:gravity="center"
                        android:textSize="@dimen/default_text_size_4"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_1"
                android:background="@color/color_white"
                android:layout_marginTop="@dimen/default_margin_4"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_padding_2"
                android:paddingRight="@dimen/default_padding_2"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/default_margin_3"
                    android:layout_marginRight="@dimen/default_margin_2"
                    android:src="@mipmap/image_my_attention"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:textSize="@dimen/default_text_size_3"
                    android:textColor="@color/default_color_gray_2"
                    />
                <ImageView
                    android:layout_width="@dimen/default_icon_size_5"
                    android:layout_height="@dimen/default_icon_size_5"
                    android:src="@mipmap/image_right"
                    />
            </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_my_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_3"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_2"
                    android:paddingRight="@dimen/default_padding_2"
                    android:background="@color/color_white"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/default_margin_3"
                        android:layout_marginRight="@dimen/default_margin_2"
                        android:src="@mipmap/image_my_wallet"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="我的钱包"
                        android:textSize="@dimen/default_text_size_3"
                        android:textColor="@color/default_color_gray_2"
                        />
                    <ImageView
                        android:layout_width="@dimen/default_icon_size_5"
                        android:layout_height="@dimen/default_icon_size_5"
                        android:src="@mipmap/image_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_3"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_2"
                    android:paddingRight="@dimen/default_padding_2"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/default_height_line"
                    android:background="@color/color_white"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/default_margin_3"
                        android:layout_marginRight="@dimen/default_margin_2"
                        android:src="@mipmap/image_my_discount"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textSize="@dimen/default_text_size_3"
                        android:textColor="@color/default_color_gray_2"
                        />
                    <ImageView
                        android:layout_width="@dimen/default_icon_size_5"
                        android:layout_height="@dimen/default_icon_size_5"
                        android:src="@mipmap/image_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_integral"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_3"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_2"
                    android:paddingRight="@dimen/default_padding_2"
                    android:layout_marginTop="@dimen/default_height_line"
                    android:background="@color/color_white"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/default_margin_3"
                        android:layout_marginRight="@dimen/default_margin_2"
                        android:src="@mipmap/image_my_integral"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="我的积分"
                        android:textSize="@dimen/default_text_size_3"
                        android:textColor="@color/default_color_gray_2"
                        />
                    <ImageView
                        android:layout_width="@dimen/default_icon_size_5"
                        android:layout_height="@dimen/default_icon_size_5"
                        android:src="@mipmap/image_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_member_upgrade"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_3"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_2"
                    android:paddingRight="@dimen/default_padding_2"
                    android:layout_marginTop="@dimen/default_height_line"
                    android:background="@color/color_white"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/default_margin_3"
                        android:layout_marginRight="@dimen/default_margin_2"
                        android:src="@mipmap/image_my_manager"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="会员升级"
                        android:textSize="@dimen/default_text_size_3"
                        android:textColor="@color/default_color_gray_2"
                        />
                    <ImageView
                        android:layout_width="@dimen/default_icon_size_5"
                        android:layout_height="@dimen/default_icon_size_5"
                        android:src="@mipmap/image_right"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_3"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_2"
                    android:paddingRight="@dimen/default_padding_2"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/default_margin_2"
                    android:background="@color/color_white"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/default_margin_3"
                        android:layout_marginRight="@dimen/default_margin_2"
                        android:src="@mipmap/image_my_help"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="帮助与反馈"
                        android:textSize="@dimen/default_text_size_3"
                        android:textColor="@color/default_color_gray_2"
                        />
                    <ImageView
                        android:layout_width="@dimen/default_icon_size_5"
                        android:layout_height="@dimen/default_icon_size_5"
                        android:src="@mipmap/image_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_about"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_3"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_2"
                    android:paddingRight="@dimen/default_padding_2"
                    android:layout_marginTop="@dimen/default_margin_2"
                    android:background="@color/color_white"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/default_margin_3"
                        android:layout_marginRight="@dimen/default_margin_2"
                        android:src="@mipmap/image_my_about"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="关于"
                        android:textSize="@dimen/default_text_size_3"
                        android:textColor="@color/default_color_gray_2"
                        />
                    <ImageView
                        android:layout_width="@dimen/default_icon_size_5"
                        android:layout_height="@dimen/default_icon_size_5"
                        android:src="@mipmap/image_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_setting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_3"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_2"
                    android:paddingRight="@dimen/default_padding_2"
                    android:layout_marginTop="@dimen/default_height_line"
                    android:background="@color/color_white"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/default_margin_3"
                        android:layout_marginRight="@dimen/default_margin_2"
                        android:src="@mipmap/image_my_setting"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textSize="@dimen/default_text_size_3"
                        android:textColor="@color/default_color_gray_2"
                        />
                    <ImageView
                        android:layout_width="@dimen/default_icon_size_5"
                        android:layout_height="@dimen/default_icon_size_5"
                        android:src="@mipmap/image_right"
                        />
                </LinearLayout>




        </LinearLayout>
    </ScrollView>


</LinearLayout>
