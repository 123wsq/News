                    android:text="@string/str_money_text_20"
                    android:textColor="@color/color_blue2"
                    android:textSize="@dimen/default_text_size_3"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height_2"
            android:layout_marginTop="@dimen/default_margin_2"
            >
            <LinearLayout
                android:id="@+id/ll_money_30"
                android:layout_width="0dp"
