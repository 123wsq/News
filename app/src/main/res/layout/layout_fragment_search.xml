<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_backgroud_color"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_2"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/shape_search"
            android:layout_marginLeft="@dimen/default_height_3"
            android:gravity="center_vertical"
            android:padding="2dp"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/image_search"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_margin_2"
                />
            <EditText
                android:id="@+id/et_search_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_3"
                android:text=""
                android:layout_centerVertical="true"
                android:background="@drawable/shape_edit_no_stroke"
                android:layout_marginLeft="@dimen/default_margin_2"
                android:layout_marginRight="@dimen/default_margin_2"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_search_text"
            android:layout_marginRight="@dimen/default_margin_2"
            android:layout_marginLeft="@dimen/default_margin_2"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_hot_search_text"
        android:layout_marginTop="@dimen/default_margin_2"
        android:layout_marginLeft="@dimen/default_margin_2"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hot_search_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/str_search_record_text"
            android:layout_marginTop="@dimen/default_margin_2"
            android:layout_marginLeft="@dimen/default_margin_2"
            />
        <TextView
            android:id="@+id/tv_clear_search_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_clear_search_record_text"
            android:layout_marginTop="@dimen/default_margin_2"
            android:layout_marginRight="@dimen/default_margin_2"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search_record_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
