<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_backgroud_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <include layout="@layout/layout_public_titlebar"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/red"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_account_balance_text"
                    android:textColor="@color/color_white"
                    android:paddingLeft="@dimen/default_padding_2"
                    android:paddingRight="@dimen/default_padding_2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.01"
                        android:textSize="40dp"
                        android:textColor="@color/color_white"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="￥"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/default_text_size_1"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/default_margin_4"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#55000000"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/image_inform"
                        android:layout_marginLeft="@dimen/default_margin_2"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无交易记录"
                        android:textSize="@dimen/default_text_size_3"
                        android:textColor="@color/color_white"
                        android:layout_marginLeft="@dimen/default_margin_2"
                        />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_3"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/default_padding_2"
                android:paddingRight="@dimen/default_padding_2"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/default_margin_3"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/str_actvitities_text"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/image_right"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_3"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/default_padding_2"
                android:paddingRight="@dimen/default_padding_2"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/default_margin_3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/str_setting_cash_password_text"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/image_right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_3"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/default_padding_2"
                android:paddingRight="@dimen/default_padding_2"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/default_height_line"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/str_update_cash_password_text"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/image_right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_3"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/default_padding_2"
                android:paddingRight="@dimen/default_padding_2"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/default_height_line"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/str_forget_cash_password_text"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/image_right"
                    />
            </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_2"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/color_white"
        >
        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/str_recharge_wallet_text"
            android:gravity="center"
            android:textSize="@dimen/default_text_size_2"
            />
        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/str_withdraw_text"
            android:gravity="center"
            android:textSize="@dimen/default_text_size_2"
            android:textColor="@color/color_white"
            android:background="@color/color_blue"
            />
    </LinearLayout>
</RelativeLayout>
