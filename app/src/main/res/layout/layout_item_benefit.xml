<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding_3"
    android:background="@color/color_white"
    android:id="@+id/ll_layout"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/image_header"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height_3"
            android:textColor="@color/default_main_font_color"
            android:textSize="@dimen/default_text_size_3"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_margin_3"
            android:singleLine="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_text_size_4"
                android:textColor="@color/default_color_gray_2"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_margin_3"
                android:maxLines="2"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="12:22"
                android:textColor="@color/default_color_gray_2"
                android:textSize="@dimen/default_text_size_4"
                android:layout_marginLeft="@dimen/default_margin_2"

                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
