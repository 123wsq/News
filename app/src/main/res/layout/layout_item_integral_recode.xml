<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_layout"
    android:padding="@dimen/default_padding_3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/default_margin_2"
        android:layout_marginRight="@dimen/default_margin_2"
        >
        <TextView
            android:id="@+id/tv_trade_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="充值"
            android:textSize="@dimen/default_text_size_2"
            android:gravity="center"
            android:textColor="@color/default_color_gray_1"
            />
        <TextView
            android:id="@+id/tv_trade_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+100"
            android:textSize="@dimen/default_text_size_3"
            android:gravity="center_vertical|right"
            android:textColor="@color/default_color_gray_1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/default_margin_2"
        android:layout_marginRight="@dimen/default_margin_2"
        android:layout_marginTop="@dimen/default_margin_4"
        >
        <TextView
            android:id="@+id/tv_trade_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2018-04-24 12:09:24"
            android:textSize="@dimen/default_text_size_2"
            android:textColor="@color/default_color_gray_2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="200"
            android:textColor="@color/default_color_gray_2"
            android:textSize="@dimen/default_text_size_3"
            android:gravity="center_vertical|right"
            />

    </LinearLayout>
</LinearLayout>
