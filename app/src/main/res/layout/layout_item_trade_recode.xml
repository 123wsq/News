<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_height_3"
    android:orientation="horizontal"
    android:id="@+id/ll_layout"
    android:background="@color/color_white"
    >


        <TextView
            android:id="@+id/tv_trade_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="充值"
            android:textSize="@dimen/default_text_size_3"
            android:gravity="center"
            android:textColor="@color/default_color_gray_2"

            />
    <View
        android:layout_width="@dimen/default_line_height"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        ></View>

    <TextView
        android:id="@+id/tv_trade_time"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:text="2018-04-24 12:09:24"
        android:textSize="@dimen/default_text_size_3"
        android:gravity="center"
        android:textColor="@color/default_color_gray_2"
        />
    <View
        android:layout_width="@dimen/default_line_height"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        ></View>
        <TextView
            android:id="@+id/tv_trade_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+100"
            android:textSize="@dimen/default_text_size_3"
            android:gravity="center"
            android:textColor="@color/default_color_gray_2"
            />
    <View
        android:layout_width="@dimen/default_line_height"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        ></View>

        <TextView
            android:id="@+id/tv_trade_state"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="200"
            android:textSize="@dimen/default_text_size_3"
            android:gravity="center"
            android:textColor="@drawable/selector_font_color_2"
            />

</LinearLayout>
