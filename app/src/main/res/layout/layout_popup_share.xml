<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/default_backgroud_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_1"
        android:background="@mipmap/image_share_bankground"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_3"
        />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_3"
        android:background="@drawable/shape_layout"
        android:layout_marginTop="@dimen/default_margin_3"
        android:layout_marginLeft="@dimen/default_height_3"
        android:layout_marginRight="@dimen/default_height_3"
        android:text="@string/str_cancel_text"
        android:gravity="center"
        android:textSize="@dimen/default_text_size_2"
        android:layout_marginBottom="@dimen/default_margin_3"
        />

</LinearLayout>
