<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_text_c">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_height_3</item>
        <item name="android:textSize">@dimen/default_text_size_3</item>
        <item name="android:textColor">@color/default_main_font_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/default_margin_3</item>
        <item name="android:layout_marginRight">@dimen/default_margin_3</item>
        <item name="android:paddingLeft">@dimen/default_padding_3</item>
        <item name="android:paddingRight">@dimen/default_padding_3</item>
    </style>
</resources>
